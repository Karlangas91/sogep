<%- include('../partials/header') %>
<%- include('../partials/sidebar') %>
<%- include('../partials/messages') %>


<div class="content-wrapper">
    <section class="content">
        <div class="container">
            <h2>Gesti√≥n de Roles</h2>
            <a href="/roles/create" class="btn btn-primary mb-3">‚ûï Nuevo Rol</a>

            <% if (message && message.length > 0) { %>
                <p class="alert alert-success"><%= message %></p>
            <% } %>
            
            <% if (successMessage && successMessage.length > 0) { %>
                <p class="alert alert-success"><%= successMessage %></p>
            <% } %>
            
            <% if (errorMessage && errorMessage.length > 0) { %>
                <p class="alert alert-danger"><%= errorMessage %></p>
            <% } %>
            

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre del Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% roles.forEach(role => { %>
                        <tr>
                            <td><%= role.id %></td>
                            <td><%= role.name %></td>
                            <td>
                                <a href="/roles/edit/<%= role.id %>" class="btn btn-warning">‚úè Editar</a>
                                <a href="/roles/delete/<%= role.id %>" class="btn btn-danger" onclick="return confirm('¬øEst√°s seguro?')">üóë Eliminar</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </section>
</div>

