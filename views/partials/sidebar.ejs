<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Contenedor del logo y el switch -->
    <div class="brand-container d-flex justify-content-between align-items-center p-2">
        <a href="/dashboard" class="brand-link">
            <span class="brand-text font-weight-light">SOGEP</span>
        </a>
        <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="sidebarSwitch">
            <label class="custom-control-label" for="sidebarSwitch"></label>
        </div>
    </div>

    <!-- Menú lateral -->
    <div class="sidebar">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                <li class="nav-item">
                    <a href="/dashboard" class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>">
                        <i class="nav-icon fas fa-home"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/users" class="nav-link <%= currentPage === 'users' ? 'active' : '' %>">
                        <i class="nav-icon fas fa-users"></i>
                        <p>Gestión de Usuarios</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/logout" class="nav-link">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>Salir</p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const sidebar = document.querySelector(".main-sidebar");
        const switchBtn = document.getElementById("sidebarSwitch");
        
        // Verificar estado guardado en localStorage
        if (localStorage.getItem("sidebarFixed") === "true") {
            sidebar.classList.add("sidebar-fixed");
            switchBtn.checked = true;
        }

        switchBtn.addEventListener("change", function () {
            if (this.checked) {
                sidebar.classList.add("sidebar-fixed");
                localStorage.setItem("sidebarFixed", "true");
            } else {
                sidebar.classList.remove("sidebar-fixed");
                localStorage.setItem("sidebarFixed", "false");
            }
        });
    });
</script>

<style>
    .brand-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .sidebar-fixed {
        position: fixed;
        height: 100vh;
    }
</style>
