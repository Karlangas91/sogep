<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Iniciar Sesión - SOGEP</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos personalizados solo para el login -->
    <link rel="stylesheet" href="/css/login-style.css">
</head>
<body class="d-flex align-items-center justify-content-center" style="height: 100vh; background-color: #f4f6f9;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">SOGEP Login</h3>

                        <!-- Mostrar mensajes de error -->
                        <% if (errorMessage && errorMessage.length > 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>❌ Error:</strong> <%= errorMessage %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        <% } %>

                        <% if (successMessage && successMessage.length > 0) { %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>✅ Éxito:</strong> <%= successMessage %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        <% } %>

                        <!-- Formulario de login -->
                        <form action="/login" method="POST">
                            <div class="mb-3">
                                <label for="username" class="form-label">Usuario</label>
                                <input type="text" name="username" class="form-control" placeholder="Usuario" value="<%= username %>" required>
                            </div>

                            <div class="mb-3 position-relative">
                                <label for="password" class="form-label">Contraseña</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Contraseña" required>
                                <!-- Ícono para mostrar/ocultar la contraseña -->
                                <button type="button" id="togglePassword" class="btn btn-link position-absolute" style="top: 50%; right: 10px; transform: translateY(-50%);">
                                    <i id="eyeIcon" class="fas fa-eye"></i>
                                </button>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" id="remember" class="form-check-input">
                                    <label for="remember" class="form-check-label">Recordarme</label>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                            </div>

                            <p class="mt-3 text-center"><a href="#">¿Olvidaste tu contraseña?</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Cambiar el tipo de input para mostrar u ocultar la contraseña
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');

        togglePassword.addEventListener('click', function (e) {
            // Alternar entre los tipos de input "password" y "text"
            const type = password.type === 'password' ? 'text' : 'password';
            password.type = type;

            // Cambiar el ícono dependiendo del estado
            eyeIcon.classList.toggle('fa-eye');
            eyeIcon.classList.toggle('fa-eye-slash');
        });
    </script>
</body>
</html>
