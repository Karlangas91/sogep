<%- include('../partials/header') %>
<%- include('../partials/sidebar') %>
<%- include('../partials/messages') %>




<div class="content-wrapper">
    <section class="content-header">
        <h1>Gesti√≥n de Usuarios</h1>
    </section>

    <section class="content">
        <% if (message && message.length > 0) { %>
            <div class="alert alert-success"><%= message %></div>
        <% } %>
        
        <% if (successMessage && successMessage.length > 0) { %>
            <div class="alert alert-success"><%= successMessage %></div>
        <% } %>
        
        <% if (errorMessage && errorMessage.length > 0) { %>
            <div class="alert alert-danger"><%= errorMessage %></div>
        <% } %>
        

        <a href="/users/create" class="btn btn-primary mb-3">Agregar Usuario</a>

        <!-- Formulario de b√∫squeda -->
    <form action="/users" method="GET" class="form-inline mb-3">
        <input type="text" name="search" class="form-control mr-2" placeholder="Buscar usuario, email o rol" value="<%= search %>">
        <button type="submit" class="btn btn-primary">üîç Buscar</button>
    </form>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                        <td>
                            <a href="/users/edit/<%= user.id %>" class="btn btn-warning btn-sm">Editar</a>
                            <a href="/users/delete/<%= user.id %>" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </section>
</div>
