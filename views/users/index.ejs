<%- include('../partials/header') %>

<div class="content-wrapper">
    <section class="content-header">
        <h1>Gesti√≥n de Usuarios</h1>
    </section>

    <section class="content">
        <a href="/users/create" class="btn btn-primary mb-3">Agregar Usuario</a>

        <!-- Formulario de b√∫squeda -->
        <form action="/users" method="GET" class="form-inline mb-3">
            <input type="text" name="search" class="form-control mr-2" placeholder="Buscar usuario, email o rol" value="<%= search %>">
            <button type="submit" class="btn btn-primary">üîç Buscar</button>
        </form>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role_name %></td>
                        <td>
                            <button class="btn btn-warning btn-sm editUserBtn" data-id="<%= user.id %>">Editar</button>
                            <a href="/users/delete/<%= user.id %>" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </section>
</div>

<!-- Modal para editar usuario -->
<div class="modal fade" id="editUserModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="editUserForm">
                    <input type="hidden" id="editUserId">
                    <div class="form-group">
                        <label>Usuario</label>
                        <input type="text" id="editUsername" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" id="editEmail" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Rol</label>
                        <select id="editRole" class="form-control">
                            <% users.forEach(user => { %>
                                <option value="<%= user.role_id %>"><%= user.role_name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success">Guardar cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
$(document).ready(function() {
    $(".editUserBtn").click(function() {
        let userId = $(this).data("id");

        $.get(`/users/${userId}`, function(data) {
            $("#editUserId").val(data.id);
            $("#editUsername").val(data.username);
            $("#editEmail").val(data.email);
            $("#editRole").val(data.role_id);
            $("#editUserModal").modal("show");
        });
    });

    $("#editUserForm").submit(function(e) {
        e.preventDefault();

        let userId = $("#editUserId").val();
        let updatedData = {
            username: $("#editUsername").val(),
            email: $("#editEmail").val(),
            role_id: $("#editRole").val()
        };

        $.ajax({
            url: `/users/${userId}`,
            type: "PATCH",
            contentType: "application/json",
            data: JSON.stringify(updatedData),
            success: function(response) {
                alert(response.message);
                location.reload();
            },
            error: function() {
                alert("Error al actualizar usuario.");
            }
        });
    });
});
</script>
