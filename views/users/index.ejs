<%- include('../partials/header.ejs') %>

<div class="content-wrapper">
    <section class="content-header">
        <h1>Gesti√≥n de Usuarios</h1>
        <% if (message) { %>
            <p class="alert alert-info"><%= message %></p>
        <% } %>
        <a href="/users/create" class="btn btn-primary">‚ûï Crear Usuario</a>
    </section>

    <section class="content">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                        <td>
                            <a href="/users/edit/<%= user.id %>" class="btn btn-warning">‚úèÔ∏è Editar</a>
                            <a href="/users/delete/<%= user.id %>" class="btn btn-danger">üóë Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>
</div>

